<!-- render in GET /posts/:id -->

<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= comment.name %></strong></p>
    <p class="comment_body"><%= comment.body %></p>
    <p class="comment_time">Commented <%= time_ago_in_words( comment.created_at ) %> ago.</p>
  </div>
  <!-- <%= link_to 'Delete', post_comment_path( @post, comment ), method: :delete, data: { confirm: 'Are you sure?' } %> -->

  <!-- Rails Guides: -->
  <!-- <%= link_to 'Delete', post_comment_path( comment.post, comment ), method: :delete, data: { confirm: 'Are you sure?' } %> -->
  <!-- And shorter, consistent with: form_for [ @post, @post.comments.build ] ... -->
  <%= link_to 'Delete', [ comment.post, comment ],
                        class: 'button',
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %>

</div>
